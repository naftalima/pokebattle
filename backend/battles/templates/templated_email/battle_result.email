{% block subject %}[PokeBattle] Battle result!{% endblock %}

{% block html %}
     <h3>Hello,</h3>

  <p><b>{{creator}}</b> challenged <b>{{opponent}}</b></p>

    <p>
        <div>{{creator}}'s team was:</div>
        <table>
        <tr>
            {% for creator_pokemon in creator_pokemon_team %}
            <td style="padding: 0 6px; width: fit-content;">
                <div style="display: block;">
                <div style="display: flex; justify-content: center;">
                    <img src="{{creator_pokemon.img_url}}" height="90px"></img>
                </div>
                <div style="text-align: center;">{{creator_pokemon.name}}</div>
                </div>
            </td>
            {% endfor %}
        </tr>
        </table>
        </div>
    </p>

        <p>
        <div>{{opponent}}'s team was:</div>
        <table>
        <tr>
            {% for opponent_pokemon in opponent_pokemon_team %}
            <td style="padding: 0 6px; width: fit-content;">
                <div style="display: block;">
                <div style="display: flex; justify-content: center;">
                    <img src="{{opponent_pokemon.img_url}}" height="90px"></img>
                </div>
                <div style="text-align: center;">{{opponent_pokemon.name}}</div>
                </div>
            </td>
            {% endfor %}
        </tr>
        </table>
        </div>
    </p>

  <p style="font-size: 18px;">And the winner is <b>{{winner}}</b>!!!</p>

{% endblock %}
